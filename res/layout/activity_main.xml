<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="bottom"
    android:padding="10dp"
    android:paddingBottom="5dp"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/AboutImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:background="@drawable/about_icon"
        android:onClick="toAbout" 
        android:contentDescription="about"/>

    <Button
        android:id="@+id/AboutTextButton"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_above="@+id/AboutImageButton"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:background="@null"
        android:onClick="toAbout"
        android:padding="0dp"
        android:text="@string/About"
        android:textStyle="bold" />

    <Button
        android:id="@+id/SearchTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:onClick="toSearch"
        android:text="@string/search"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/SearchImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/AboutTextButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_icon"
        android:contentDescription="searches"
        android:onClick="toSearch" />

</RelativeLayout>